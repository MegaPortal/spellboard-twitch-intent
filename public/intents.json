{
    "name": "Twitch Streamer Live Checker",
    "description": "Check if a streamer is live on Twitch by their login name.",
    "intents": [
        {
            "name": "is_streamer_live_on_twitch",
            "description": "Check if a streamer is live on Twitch by their login name.",
            "parameters": {
                "type": "object",
                "properties": {
                    "login_name": {
                        "type": "string",
                        "description": "The streamer's login name."
                    }
                },
                "required": [
                    "login_name"
                ]
            },
            "async": true,
            "link": "/?name={login_name}",
            "example": "/?name=ninja",
            "returns": {
                "type": "object",
                "properties": {
                    "response": {
                        "type": "string",
                        "description": "The information of the streamer."
                    }
                }
            }
        },
        {
            "name": "search_twitch_streamer",
            "description": "Search for a streamer on Twitch by a query. for example, can be a game name or a login name.",
            "parameters": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "The query to search for."
                    }
                },
                "required": [
                    "query"
                ]
            },
            "async": true,
            "link": "/channel/list?query={query}",
            "example": "/channel/list?query=ninja",
            "returns": {
                "type": "object",
                "properties": {
                    "response": {
                        "type": "string",
                        "description": "The information of the streamers."
                    }
                }
            }
        }
    ]
}